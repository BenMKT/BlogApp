<html>
  <head>
    <title>BApp</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="application.css">
    <style>
	.user-item {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
        padding: 8px;
      }

      .user-image {
        width: 100px;
        height: 100px;
        margin-right: 60px;
      }

      .user-details {
        display: flex;
        flex-direction: column;
        border: 2px solid black;
        padding: 10px;
        width: 20%;
        text-decoration: none;
      }

      .user-name {
        font-size: 1.4em;
        color: black;
        text-decoration: none;
      }

      .user-post-count {
        color: black;
        margin-top: 10px;
        margin-left: 95px;
      }

      .user-bio {
        border: 2px solid black;
        padding: 10px;
        width: 32%;
      }

      .user-posts {
        margin-top: 20px;
        width: 34%;
      }

      .post {
        border: 2px solid black;
        padding: 10px;
        margin-bottom: 20px;
        position: relative;
      }

      .post-title {
        font-size: 1.2em;
        color: black;
      }

      .post-text {
        margin-top: 10px;
      }

      .post-details {
        display: flex;
        justify-content: space-between;
        margin-top: 15px;
      }

      .post-comments {
        color: black;
		margin-left: 290px;
      }

      .post-likes {
        color: black;
      }

	  .see-all-posts {
        margin-left: 160px;
        margin-top: 20px;
		    font-size: 1.2em;
        text-align: center;
        text-decoration: none;
		    width: 10%;
        border-radius: 5px;
		    color: black;
		    border: 2px solid black;
        box-shadow: 0 10px 15px 0;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <div class="user-item">
        <div class="user-image">
          <%= image_tag(@user.photo, alt: "User Image", class: "user-image") %>
        </div>
        <div class="user-details">
          <h2 class="user-name"><%= @user.name %></h2>
          <p class="user-post-count">Number of Posts: <%= @posts.count %></p>
        </div>
      </div>
      <div class="user-bio">
        <h3>Bio</h3>
        <p><%= @user.bio %></p>
      </div>
      <div class="user-posts">
        <% @user.three_most_recent_post.each do |post| %>
          <div class="post">
            <h2 class="post-title"><%= link_to post.title, user_post_path(post) %></h2>
            <p class="post-text"><%= post.text %></p>
            <div class="post-details">
              <span class="post-comments">
                <%= post.comments.count %> Comments
              </span>
              <span class="post-likes">
                <%= post.likes.count %> Likes
              </span>
            </div>
          </div>
        <% end %>
      </div>
      <div class="see-all-posts">
        <%= link_to "View all posts", user_posts_path(@user) %>
      </div>
    </div>
  </body>
</html>
