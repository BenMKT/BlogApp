<div class="user-item">
  <div class="user-image">
    <%= image_tag(user.photo, alt: "User Image", class: "user-image") %>
  </div>
  <div class="user-details">
    <span class="user-name"><%= link_to user.name, user %></span>
    <span class="user-post-count">Number of posts: <%= user.posts.count %></span>
  </div>
</div>
