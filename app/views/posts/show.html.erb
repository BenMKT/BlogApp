    <div class="container">
      <div class="post-list">
        <div class="post">
          <div class="user-name">
            <%= @post.user.name %>
            <span class="user-post-count">
              <%= @post.comments_counter %> Comments <%= @post.likes_counter %> Likes
            </span>
          </div>
          <p class="post-text"><%= @post.text %></p>
          <div class="like-button">
            <% if current_user %>
              <% if current_user.likes.exists?(post: @post) %>
                <%= link_to "Unlike", post_like_path(@post, current_user.likes.find_by(post_id: post.id)), method: :delete, class: 'btn btn-danger' %>
              <% else %>
                <%= link_to "Like", post_likes_path(@post), method: :post, class: 'btn btn-primary' %>
              <% end %>
            <% end %>
          </div>
        </div>
        <div class="comment-container">
          <% @comments.each do |comment| %>
            <div class="comment">
              <span class="comment-username"><%= comment.user.name %>:</span>
              <span class="comment-text"><%= comment.text %></span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
